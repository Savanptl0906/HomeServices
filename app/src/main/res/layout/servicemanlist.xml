<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/custom_border"
        android:padding="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">


        <TextView
            android:id="@+id/sname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Service Man Name"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"/>

        <TextView
                android:id="@+id/smobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:gravity="center_vertical"
                android:text="Service Man Mobile"
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                android:textStyle="bold" />
        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/cname"
            android:visibility="invisible"
            android:textSize="1sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Customer Name"/>
        <TextView
            android:id="@+id/cmobile"
            android:visibility="invisible"
            android:textSize="1sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Customer Mobile"/>
        <TextView
            android:id="@+id/caddress"
            android:visibility="invisible"
            android:textSize="1sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Customer Address"/>
        <TextView
            android:id="@+id/model"
            android:visibility="invisible"
            android:textSize="1sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Model No"/>
        <TextView
            android:id="@+id/issue"
            android:visibility="invisible"
            android:textSize="1sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Issues"/>
        <TextView
            android:id="@+id/visitcharge"
            android:visibility="invisible"
            android:textSize="1sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Visit Charge"/>
        <TextView
            android:id="@+id/pr_name"
            android:visibility="invisible"
            android:textSize="1sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Shop Name"/>
        <TextView
            android:id="@+id/pr_mobile"
            android:visibility="invisible"
            android:textSize="1sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="provider Mobile"/>
    </LinearLayout>
</LinearLayout>
